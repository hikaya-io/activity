apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: activity-app-${APPLICATION_ENV}
  namespace: ${APPLICATION_ENV}
spec:
  scaleTargetRef:
    apiVersion: apps/v1beta1
    kind: Deployment
    name: activity-app-${APPLICATION_ENV}
  minReplicas: 2
  maxReplicas: 8
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
